<UserControl
    x:Class="Eventa.Controls.ZoomImageDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Styles>
        <Style Selector="Button.ZoomButton">
            <Setter Property="Background" Value="#FFB5B5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontFamily" Value="{StaticResource Kadwa}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="4" />
        </Style>

        <Style Selector="Button.ZoomButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF9999" />
        </Style>

        <Style Selector="Button.CloseButton">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style Selector="Button.CloseButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#555555" />
        </Style>
    </UserControl.Styles>

    <!--  Overlay background  -->
    <Panel
        Name="DialogOverlay"
        Background="#DD000000"
        IsVisible="False">
        <Grid RowDefinitions="Auto,*">
            <!--  Top Control Bar  -->
            <Border
                Grid.Row="0"
                Padding="20"
                Background="#33000000">
                <Grid ColumnDefinitions="*,Auto">
                    <!--  Zoom Controls  -->
                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Classes="ZoomButton"
                            Click="OnZoomIn"
                            Content="Zoom In +" />
                        <Button
                            Classes="ZoomButton"
                            Click="OnZoomOut"
                            Content="Zoom Out −" />
                        <Button
                            Classes="ZoomButton"
                            Click="OnResetZoom"
                            Content="Reset" />
                    </StackPanel>

                    <!--  Close Button  -->
                    <Button
                        Grid.Column="1"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Classes="CloseButton"
                        Click="OnClose"
                        Content="×" />
                </Grid>
            </Border>

            <!--  Canvas Container for Pan & Zoom  -->
            <Border
                Name="CanvasContainer"
                Grid.Row="1"
                ClipToBounds="True"
                Cursor="Hand"
                PointerMoved="OnPointerMoved"
                PointerPressed="OnPointerPressed"
                PointerReleased="OnPointerReleased"
                PointerWheelChanged="OnPointerWheelChanged">
                <Canvas Name="ImageCanvas">
                    <asyncImageLoader:AdvancedImage Name="ZoomImage" />
                </Canvas>
            </Border>
        </Grid>
    </Panel>
</UserControl>