<UserControl
    x:Class="Eventa.Controls.DialogControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  Overlay background  -->
    <Panel
        Name="DialogOverlay"
        Background="#80000000"
        IsVisible="False">
        <Border
            Width="320"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BoxShadow="0 4 20 0 #30000000"
            CornerRadius="12">
            <StackPanel Spacing="20">
                <TextBlock
                    Name="TitleTextBlock"
                    FontFamily="{StaticResource Kadwa}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="#333333"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <TextBlock
                    Name="DescriptionTextBlock"
                    FontFamily="{StaticResource Kadwa}"
                    FontSize="14"
                    Foreground="#666666"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <StackPanel Margin="0,10,0,0" Spacing="12">
                    <Button
                        Name="NoButton"
                        Padding="0,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="#FFB5B5"
                        BorderThickness="0"
                        Click="OnNoClick"
                        CornerRadius="8"
                        Cursor="Hand"
                        FontFamily="{StaticResource Kadwa}"
                        FontSize="16"
                        Foreground="White">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#FF9999" />
                            </Style>
                        </Button.Styles>
                    </Button>

                    <Button
                        Name="OkButton"
                        Padding="0,12"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Background="#E0E0E0"
                        BorderThickness="0"
                        Click="OnOkClick"
                        CornerRadius="8"
                        Cursor="Hand"
                        FontFamily="{StaticResource Kadwa}"
                        FontSize="16"
                        Foreground="#666666">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#CCCCCC" />
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Panel>
</UserControl>